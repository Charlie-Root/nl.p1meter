{
  "id": "nl.p1meter",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "P1 Meter"
  },
  "description": {
    "en": "Adds support for custom P1 script for smart meters"
  },
  "category": ["tools","appliances", "energy"],
  "capabilities": {
    "measure_gas": {
      "type": "number",
      "title": {
        "en": "Gas",
        "nl": "Gas"
      },
      "desc": {
        "en": "Gas usage (previous hour)",
        "nl": "Gasverbruik (vorige uur)"
      },
      "units": {
        "en": "m\u00B3",
        "nl": "m\u00B3"
      },
      "getable": true,
      "setable": false
    }
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Wieger Bontekoe",
    "email": "wieger@skynet-ict.nl"
  },
  
  "drivers": [
    {
        "id": "P1Meter",
        "name": {
            "en": "P1Meter",
            "nl": "P1Meter"
        },
        "class": "sensor",
        "capabilities": [
          "measure_power",
          "measure_gas",
          "meter_gas",
          "meter_power"
        ],
        "pair": [
            {
                "id": "pair"
                
            }
        ],
        
        "settings": [
          {
            "type": "group",
            "label": {
              "en": "Script information",
              "nl": "Script informatie"
            },
            "children": [
              {
                "id": "base_path",
                "type": "text",
                "label": {
                  "en": "BASE PATH",
                  "nl": "BASE PATH"
                },
                "value": "/results.txt"
              }
            ]
          },
          {
            "type": "group",
            "label": {
              "en": "Connection",
              "nl": "Verbinding"
            },
            "children": [
              {
                "id": "base_url",
                "type": "text",
                "label": {
                  "en": "URL or IP address",
                  "nl": "URL of IP adres"
                },
                "value": "http://10.0.1.205"
              },
              {
                "id": "pollingInterval",
                "type": "number",
                "label": {
                  "en": "Polling interval (s)",
                  "nl": "Polling interval (s)"
                },
                "attr": { "min": 10 },
                "value": 30
              }
            ]
          }
          
        ]
      }
    ]
  
        
    }
  

