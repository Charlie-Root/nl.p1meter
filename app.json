{
  "id": "nl.p1meter",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "P1 Meter"
  },
  "description": {
    "en": "Adds support for custom P1 script for smart meters"
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Wieger Bontekoe",
    "email": "wieger@skynet-ict.nl"
  },
  "drivers": [
    {
        "id": "P1Meter",
        "name": {
            "en": "P1Meter",
            "nl": "P1Meter"
        },
        "class": "sensor",
        "capabilities": [ "meter_gas", "meter_power" ],
        "pair": [
            {
                "id": "pair",
                "template": "list_devices",
                "navigation": {
                    "next": "add_devices"
                }
            },
            {
                "id": "add_devices",
                "template": "add_devices"
            }
        ]
        
    }
  ]
}
